<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zheng.mapper.BlogMapper">
    <!-- ============= 这里是 自己写的代码================ -->

    <select id="searchBlog" parameterType="java.lang.String" resultMap="Blog_ResultMap">
        select DISTINCT id,
        <include refid="Blog_Column_List"/>
        from blog
        where title like '%${key}%'
        or content like '%${key}%'
        order by id ASC
        <include refid="BaseSql.sqlEnd"/>
        limit #{start},#{end}
    </select>

    <select id="searchBlog" parameterType="java.lang.String" resultType="int">
        SELECT count(*)
        FROM (
            SELECT DISTINCT id,
            FROM blog
            where title like '%${key}%'
            or content like '%${key}%'
        )
    </select>
</mapper>